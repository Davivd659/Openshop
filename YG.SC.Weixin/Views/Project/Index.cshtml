@using YG.SC.Model.Project;﻿
@model ProjectDetailsViewModel

@{
    ViewBag.Title = "Index"; 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width">
    <meta content="telephone=no" name="format-detection">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="location" content="province=北京;city=北京;coord=116.421508,39.997099">
    <link rel="stylesheet" type="text/css" href="/css/common.css">
    <link rel="stylesheet" type="text/css" href="/css/findcompany.css">
    <link rel="stylesheet" type="text/css" href="/css/zxgl-index.css">
    <script type="text/javascript" src="/js/jquery.js"></script>
    <title>@Model.Name- 开店ing</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
</head>
<body onselectstart="return false">
    <div class="topbannerFrame">
        <figure>
            <div class="find-company-topbanner">
                <!--项目图片 start -->
                <img src="@string.Format("http://www.kaidianing.com{0}", Model.CoverPhoto)" onerror="javascript:this.src='/img/icon/xiangmuimg.jpg'">
                    
                <!-- 项目经理头像 start -->
                @{
                    if (Model.ProjectServiceViewModels != null && Model.ProjectServiceViewModels.Any(p => p.IsVip))
                    {
                        var serviceLeader = Model.ProjectServiceViewModels.FirstOrDefault(p => p.IsVip);
                        <div class="find-company-logo">
                            <figure>
                                <img src="@string.Format("http://admin.kaidianing.com{0}",serviceLeader.PicUrl)" alt="项目经理头像" onerror="javascript:this.src='/img/icon/jingli.gif'">
                            </figure>
                        </div>
                    }
                    else
                    {  <div class="find-company-logo">
                        <figure>
                            <img src="/img/icon/jingli.gif" alt="项目经理头像">
                        </figure>
                    </div>
                    }
}
                <!-- 项目经理头像 End -->


                <!--<h1>远洋光华国际</h1>-->
                <p>【@Model.Region/@Model.TradingArea】@Model.Name 
                    <br>@Model.GetPrice

                </p>
            </div>
        </figure>
    </div>
    <nav>
        <ul class="find-company-nav clearfix">
            <li>
                <a class="active">项目信息</a>
            </li>
            <li>
                <a class="click-point" data-point="2_5_3_1" href="/project/team?id=@Model.Id">服务团队</a>
            </li>
            <li>
                <a class="click-point" data-point="2_5_3_1" href="/project/img?id=@Model.Id">项目图册</a>
            </li>
        </ul>
    </nav>

    <section class="clearfix">
        <ul class="zxgl-index-modules">
               <li>
                   <i class="icon-zxgl-index-riji"><img src="/img/icon/xiezilou.png"></i><span>写字楼</span>
			    </li>
				<li>
                    <i class="icon-zxgl-index-xzx"><img src="/img/icon/canyin.png"></i><span>餐饮</span>
				</li>
				<li>
                    <i class="icon-zxgl-index-ask"><img src="/img/icon/kehu.png"></i><span>10家</span>
				</li>

        </ul>
    </section>
    <section>
        <div class="apply-design-price">
            <div>
                @*<a class="click-point" data-point="2_5_1_2" href="/project/applycustomer?id=@Model.Id">
                    <input value="报名参加团购" type="button">
                </a>*@
                <a class="click-point" id="link_kanfangtuan" data-point="2_5_1_2">
                    <input value="报名参加团购" type="button">
                </a>
            </div>
        </div>
    </section>
    <section>
        <article>
            <div class="phoneyixue phone-icon">
                <a class="click-point" data-point="2_5_1_4" href="tel:010-53381050">
                    <span>@Model.ContactPhone
                    </span><b> &gt; </b><i>看房前请先报名团购</i>
                </a>
            </div>
            <div class="phoneyixue address-icon" id="addressDown">
                <span>@Model.AdressLine</span><b> &gt; </b>
            </div>
            <a class="click-point" data-point="2_5_1_3">
                <div class="companyintro">
                    <h1>项目优势</h1>
                    <p>@Model.ProjectAdvantage </p>
                </div>
            </a>
        </article>
        <article>
            <a class="click-point" data-point="2_5_1_6">
                <div class="companyintro">
                    <h1>项目参数<span> &gt; </span></h1>
                    <p>

                        业态：@Model.TypeOfOperation  <br>
                        外立面形式：@Model.Facade <br>
                        建筑结构：@Model.Architecture<br>
                        总建筑面积：@Model.TotalFloorArea  平米<br>
                        总层数：@Model.TotalLayerNum 层 <br>
                        标准层净高：@Model.SignalLayerHeight 米<br>
                        标准层面积：@Model.SignalLayerArea 平米<br>
                        主力户型：@Model.MainUnit 平米 <br>
                        电梯数量：@Model.PassengerElevatorNum <br>
                        车位：@Model.ParkingPlace <br>
                    </p>
                </div>
            </a>
        </article>
    </section>
    <div id="alertOveryLayer" style="position: fixed; left: 0px; top: 0px; z-index: 99999; text-align: center; bottom: 0px; right: 0px; background-color: rgba(0, 0, 0, 0.298); display: none;">
        <div style="  position: absolute;display: -moz-box;  display: -webkit-box;  display: -webkit-flex;  display: -moz-flex;  display: -ms-flexbox;  display: -ms-flex;  display: flex;top: 30%;width: 100%;">
            <div class="alert-lay" style="/* display: table-cell; */vertical-align: middle;padding: 0 10%;-webkit-box-sizing: border-box;  -moz-box-sizing: border-box;  box-sizing: border-box;  display: block;  -webkit-box-flex: 1;  -moz-box-flex: 1;  -webkit-flex: 1 1 0;  -moz-flex: 1 1 0;  -ms-flex: 1 1 0;  flex: 1 1 0;  text-align: center;">
                <div class="overlay-bd" style="background-color: #fff;font-size: 14px;color: #333333;line-height: 24px;padding: 20px 15px;text-align: center;border-radius: 7px 7px 0 0;">asdf</div>
                <div class="overlay-foot" style="border-top: 1px solid #e3e3e3;">
                    <div class="overlay-btn overlay-btn-ok" style="background-color: #fff;cursor: pointer;font-size: 16px;color: #00a1ff;height: 42px;line-height: 42px;border-radius: 0 0 7px 7px;">好的</div>
                </div>
            </div>
        </div>
    </div>

    <script language="javascript">
        $(document).ready(function () {
            $("#link_kanfangtuan").click(function () {
                var islogin = true;
                islogin = @ViewBag.islogin;
                if (islogin) {
                    // 报名看房团
                    window.location.href = "/project/applycustomer?projectId=@Model.Id";
                } else {
                    // 请登录 
                    alert("请登录")
                    window.location.href = "/Login/Index?fromurl=" + encodeURI(window.location.href);
                }

            });

        });
    </script>
</body>
</html>