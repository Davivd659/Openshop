<body onselectstart="return false">
    <style>
        body {
            background-color: #fff;
        }

        input {
            border: medium none;
            height: 20px;
            line-height: 20px;
            margin-top: 13px;
            outline: medium none;
            width: 100%;
        }
    </style>
    <header id="dt-hd" class="navstyle3" style="text-align: left;">
        <div style="width:98%;padding-left:1%;line-height:40px;font-size: 16px;font-weight: bold;float:left;">
            发布需求
        </div>

    </header>
    <form class="zxd-form sjbj-form" id="form_zx" action="/pOSTINGS/ADD" method="post">
        <section class="bj-frame">
            <dl>
                <dt>意向类型</dt>
                <dd>
                    <p style="display: none;" class="zx-yixiang">忘记选择意向类型了哦~</p>
                    <label>
                        <select class="needsclick" name="yixiang" id="yixiang" data-msg="请选择您的意向类型">
                            <option selected="selected" value="-1">请选择意向类型</option>
                            <option value="False">求租</option>
                            <option value="True">求购</option>
                        </select>
                    </label>
                </dd>
                <dt>标题</dt>
                <dd>
                    <p style="display: none;" class="zx-pname">忘记输入标题了哦~</p>
                    <input id="PName" name="PName" class="areaSel" placeholder="请输入您的需求标题">
                </dd>
                <dt>自身业态</dt>
                <dd>
                    <p style="display: none;" class="zx-zsyt">忘记输入业态了哦~</p>
                    <input id="Format" name="Format" class="areaSel" placeholder="请输入业态类型">
                </dd>
                <dt>意向区域</dt>
                <dd>
                    <p style="display: none;" class="zx-quyu">忘记选择意向区域了哦~</p>
                    <label>
                        <select class="needsclick" name="district" id="district" data-msg="请选择您的意向区域">
                            <option selected="selected" value="-1">请选择意向区域</option>                           
                            @{
                                var areas = (List<SelectListItem>)ViewBag.areaList;
                                }
                            @foreach (var areaItem in areas)
                            {
                                <option value="@areaItem.Value">@areaItem.Text</option>
                            }
                        </select>
                    </label>
                </dd>
                <dt>需求面积</dt>
                <dd>
                    <p style="display: none;" class="zx-square">忘记添加需求面积了哦~</p>
                    <input id="square" name="square" class="areaSel" placeholder="请输入您的需求面积">
                </dd>
                <dt>意向价格</dt>
                <dd>
                    <p style="display: none;" class="zx-price">忘记输入价格了哦~</p>
                    <input id="price" name="price" class="areaSel" placeholder="请输入您的意向价格">
                </dd>
                <dt>意向物业</dt>
                <dd>
                    <p style="display: none;" class="zx-Ptype">忘记选择意向物业类型了哦~</p>
                    <label>
                        <select class="needsclick" name="Ptype" id="Ptype" data-msg="请选择您的意向物业类型">
                            <option selected="selected" value="-1">请选择意向物业类型</option>
                            @*<option value="1">写字楼</option>*@
                            @{
                                var typelist = (List<SelectListItem>)ViewBag.TypeList;
                            }
                            @foreach (var typeItem in typelist)
                            {
                                <option value="@typeItem.Value">@typeItem.Text</option>
                            }
                        </select>
                    </label>
                </dd>
                <dt style="height:146px;">需求详情</dt>
                <dd style="height:146px;">
                    <p style="display: none;" class="zx-Pinfo">忘记输入需求详情了哦~</p>
                    <textarea rows="5" id="Pinfo" name="Pinfo" class="areaSel" placeholder="请输入需求详情" type="number"></textarea>

                </dd>
                <dt>截止日期</dt>
                <dd>
                    <p style="display: none;" class="zx-jzrq">忘记输入日期了哦~</p>
                    <input id="Endtiem" name="Endtiem" class="areaSel" placeholder="请输入截止日期" value="@DateTime.Now.AddMonths(2).ToString("yyyy-MM-dd")" />
                </dd>
                <dt>联系人</dt>
                <dd>
                    <p style="display: none;" class="zx-contacts">忘记输入联系了哦~</p>
                    <input id="Contacts" name="Contacts" class="areaSel" placeholder="请输入联系人" />
                </dd>
                <dt>手机号码</dt>
                <dd>
                    <p style="display: none;" class="zx-mobile">请正确输入手机号码</p>
                    <input id="Mobile" name="Mobile" class="phoneNumber" placeholder="只能填写手机号" type="tel">
                </dd>
                @*<dt class="val-code"> 验 证 码 </dt>
                    <dd class="val-code">
                        <p class="val-msg-code">请输入验证码哦~</p>
                        <input class="val-code-show img-captcha" name="captcha" id="captcha" placeholder="输入右边验证码" type="text">
                        <a class="refresh-captcha" href="#">
                            <img src="js/vfcode.png" height="23" width="70">
                        </a>
                    </dd>*@

            </dl>
        </section>
        <div class="finish-btn-next">
            <input id="zxd-form-submit" value="确定发布" type="button">
        </div>

    </form>

    
 
