    <script type="text/javascript">
    $(function () {
        $("#form_zx input").on('keyup blur', function () {
            $(this).prev('p').hide();
        });
        $("#form_zx select").change(function () {
            $(this).parent().prev('p').hide();
            $(this).parent().prev().prev('p').hide();
        });

        $("#phone").focus(function () {
            $(".val-phone").show();
        });
        @{ DateTime timenow = DateTime.Now.AddMonths(2);}
        var curr = new Date().getFullYear();
        var fun = function () {
            $('#Endtiem').scroller('destroy').scroller({
                preset: 'date',
                // minDate: new Date(@timenow.ToString("yyyy,MM, dd, HH, mm, 0, 0")),
                // maxDate: new Date(@timenow.ToString("yyyy,MM, dd, HH, mm, 0, 0")),
                theme: 'ios',
                mode: 'scroller',
                lang: 'zh',
                display:'modal',
                animate: ''
            });
        }

        fun();
    });

    </script>



</body>

</html>

