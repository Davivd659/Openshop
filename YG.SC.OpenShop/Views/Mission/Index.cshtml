<script>
	function checkUser() {
		var result = false;
		$.ajax({
			type:"post",
			url:"/Customer/IsLogin",
			async: false,
			success: function (r) {
				result = r == "1";
			}
		});
		if (!result) {
			setTimeout("$('#divLogin').show();");
		}
		return result;
	}
</script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script>
	$(function () {
		$('#btnlogin').click(function () {
			var LoginName = $.trim($('#loginName').val());
			if (LoginName.length === 0) {
				$('#loginName').popover('show');
				return false;
			} else {
				$('#loginName').popover('hide');
			}
			var password = $.trim($('#password').val());
			if (password.length === 0) {
				$('#password').popover('show');
				return false;
			} else {
				$('#password').popover('hide');
			}
			var remembereMe = $('input[type=checkbox]').is(":checked");
			var flag = true;

			if (flag) {
				var btn = $(this);
				//btn.button('loading');
				$.post('/Login/Login', { LoginName: LoginName, Password: password, RememberMe: remembereMe }, function (result) {
					if (result == "1") {
						alert("登录成功！");
						$("#divLogin").hide();
						location.reload();
					}
					else {
						alert("用户名密码错误。");
					}
				});
			}
		});
	})
</script>
