@model YG.SC.OpenShop.Models.Demand
@using YG.SC.Common.AttributeExtention
@{
    ViewBag.Title = "发布需求--开店ing，一站式开店服务平台";
    Layout = "~/Views/Shared/_Layouttwo.cshtml";
}


<meta name="keywords" content="开店ing,需求发布，开店网，润嘉众合，开餐饮，开超市，开零售，开商铺，写字楼出租，shopping mall" />
<meta name="description" content="开店ing定位为服务于线下创业者的一站式服务整合平台,主要包括开餐饮，开超市，开零售，开商铺，写字楼出租，shopping mall，商场招租，写字楼出租，写字楼出售，商铺装修，商铺家具，餐饮装修等各种需求发布" />

<meta name="viewport" content="width=device-width" />
<title>发布需求</title>
<link href="~/Content/Demand.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
<script>
    $(function () {
        $.datepicker.regional['zh-CN'] = {
            closeText: '关闭',
            prevText: '<上月',
            nextText: '下月>',
            currentText: '今天',
            monthNames: ['一月', '二月', '三月', '四月', '五月', '六月',
            '七月', '八月', '九月', '十月', '十一月', '十二月'],
            monthNamesShort: ['一', '二', '三', '四', '五', '六',
            '七', '八', '九', '十', '十一', '十二'],
            dayNames: ['星期日', '星期一', '星期二', '星期三', '星期四', '星期五', '星期六'],
            dayNamesShort: ['周日', '周一', '周二', '周三', '周四', '周五', '周六'],
            dayNamesMin: ['日', '一', '二', '三', '四', '五', '六'],
            weekHeader: '周',
            dateFormat: 'yy-mm-dd',
            firstDay: 1,
            isRTL: false,
            showMonthAfterYear: true,
            yearSuffix: '年'
        };
        $.datepicker.setDefaults($.datepicker.regional['zh-CN']);
        $("#EndDate").datepicker();
    });
</script>
<style>
    h1 {
        font-size: 22px;
    }

    .form {
        text-align: center;
        background-color: white;
        width: 1006px;
        margin-left: 100px;
    }

    .redStar {
        color: red;
        margin-right: 5px;
    }

    #tblForm {
        width: 60%;
        margin-top: 30px;
        margin-left: 30%;
    }

        #tblForm tr {
            line-height: 36px;
        }

            #tblForm tr td {
                padding: 0;
            }

    .FieldName {
        text-align: right;
        width: 20%;
        font-size: 14px;
    }

    .FieldTextBox {
        text-align: center;
        padding-left: 5px;
        line-height: 20px;
        width: 40%;
    }

        .FieldTextBox input {
            border: 1px solid #ccc;
            width: 90%;
        }

    .FieldDdl {
        text-align: center;
        padding-left: 5px;
        line-height: 20px;
        width: 40%;
    }

    .FieldTextBox select {
        border: 1px solid #ccc;
        width: 90%;
    }

    .FieldRadio {
        text-align: left;
        padding-left: 20px;
        line-height: 20px;
    }

        .FieldRadio table tbody tr td input {
            margin-left: 10px;
        }

        .FieldRadio table tbody tr td label {
            margin-left: 5px;
        }

    .FieldMessage {
        color: red;
        width: 40%;
        text-align: left;
    }

    .button {
        line-height: 40px;
    }

        .button button {
            text-align: center;
            background-color: #ec341d;
            color: white;
            width: 60%;
        }
</style>

<div class="content">
    @*面包屑导航*@
    <div class="linkChain">需求&gt;需求&gt;发布需求</div>
    <div class="form">
        <img src="~/Images/IssueLeft.png" style="width:500px;" />
        <img src="~/Images/IssueRight.png" style="width:500px;" />
        <h1>发布您的需求</h1>
        开店ing专业寻址团队竭诚为您服务
        @using (Html.BeginForm("Issue", "Demand", FormMethod.Post))
        {
            <table id="tblForm">
                <tr>
                    <td class="FieldName"><span class="redStar">*</span>@Html.LabelFor(m => m.Type)</td>
                    <td class="FieldRadio">
                        @Html.RadioButtonListFor(m => m.Type, "意向类型")
                    </td>
                    <td class="FieldMessage">
                        @Html.ValidationMessageFor(mbox => mbox.Type)&nbsp;
                    </td>
                </tr>
                <tr>
                    <td class="FieldName"><span class="redStar">*</span>@Html.LabelFor(m => m.Title)</td>
                    <td class="FieldTextBox">
                        @Html.TextBoxFor(m => m.Title)
                    </td>
                    <td class="FieldMessage">@Html.ValidationMessageFor(m => m.Title)</td>
                </tr>
                <tr>
                    <td class="FieldName"><span class="redStar">*</span>@Html.LabelFor(m => m.Format)</td>
                    <td class="FieldTextBox">
                        @Html.TextBoxFor(m => m.Format)
                    </td>
                    <td class="FieldMessage">@Html.ValidationMessageFor(m => m.Format)</td>
                </tr>
                <tr>
                    <td class="FieldName"><span class="redStar">*</span>@Html.LabelFor(m => m.Area)</td>
                    <td class="FieldTextBox">
                        @Html.DropDownListFor(m => m.Area, ViewBag.AreaList as List<SelectListItem>)
                    </td>
                    <td class="FieldMessage">@Html.ValidationMessageFor(m => m.Area)</td>
                </tr>
                <tr>
                    <td class="FieldName"><span class="redStar">*</span>@Html.LabelFor(m => m.Square)</td>
                    <td class="FieldTextBox">
                        @Html.TextBoxFor(m => m.Square)
                    </td>
                    <td class="FieldMessage">@Html.ValidationMessageFor(m => m.Square)</td>
                </tr>
                <tr>
                    <td class="FieldName"><span class="redStar">*</span>@Html.LabelFor(m => m.Price)</td>
                    <td class="FieldTextBox">
                        @Html.TextBoxFor(m => m.Price)
                    </td>
                    <td class="FieldMessage">@Html.ValidationMessageFor(m => m.Price)</td>
                </tr>
                <tr>
                    <td class="FieldName"><span class="redStar">*</span>@Html.LabelFor(m => m.PType)</td>
                    <td class="FieldTextBox">
                        @Html.DropDownListFor(m => m.PType, ViewBag.TypeList as List<SelectListItem>)
                    </td>
                    <td class="FieldMessage">@Html.ValidationMessageFor(m => m.PType)</td>
                </tr>
                <tr>
                    <td class="FieldName"><span class="redStar">*</span>@Html.LabelFor(m => m.Details)</td>
                    <td class="FieldTextBox">
                        @Html.TextAreaFor(m => m.Details, new { @style = "width:90%;height:100px;" })
                    </td>
                    <td class="FieldMessage">@Html.ValidationMessageFor(m => m.Details)</td>
                </tr>
                <tr>
                    <td class="FieldName"><span class="redStar">*</span>@Html.LabelFor(m => m.EndDate)</td>
                    <td class="FieldTextBox">
                        @Html.TextBoxFor(m => m.EndDate)
                    </td>
                    <td class="FieldMessage">@Html.ValidationMessageFor(m => m.EndDate)</td>
                </tr>
                <tr>
                    <td class="FieldName"><span class="redStar">*</span>@Html.LabelFor(m => m.Contact)</td>
                    <td class="FieldTextBox">
                        @Html.TextBoxFor(m => m.Contact)
                    </td>
                    <td class="FieldMessage">@Html.ValidationMessageFor(m => m.Contact)</td>
                </tr>
                <tr>
                    <td class="FieldName"><span class="redStar">*</span>@Html.LabelFor(m => m.Mobile)</td>
                    <td class="FieldTextBox">
                        @Html.TextBoxFor(m => m.Mobile)
                    </td>
                    <td class="FieldMessage">@Html.ValidationMessageFor(m => m.Mobile)</td>
                </tr>
                <tr>
                    <td colspan="2" class="button">
                        <button type="submit" id="btnIssue">确认发布</button>
                    </td>
                    <td>&nbsp;</td>
                </tr>
            </table>
        }
    </div>
</div>
