<div class="panel panel-default">
    <div class="panel-heading">添加开店帮</div>
    <div class="panel-body">
        <form class="form-horizontal" role="form" action="/OpenShop/Add" id="addform" method="POST" enctype="multipart/form-data">
            <div class="alert alert-danger" id="create-warning">@TempData["ERROR"]</div>
            <div class="form-group">
                <label class="col-sm-1 control-label">开店帮名称</label>

                <input type="text" id="Name" name="Name" class="form-control" required="required">
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label">开店帮介绍</label>

                <input type="text" id="Rmark" name="Rmark" class="form-control" required="required">
            </div>
              <div class="form-group">
                  @{ var shoptypeList = (List<SelectListItem>)ViewBag.shopType;}
                @*<label class="col-sm-1 control-label">开店帮类型</label>
                @Html.DropDownList("Type",shoptypeList,new {@class="form-control"});*@
           
                 @Html.LabelFor(m => m.TypeId, new { @class = "col-sm-1 control-label" })
                 @Html.CheckBoxListFor(m => m.TypeId, "开店帮")

            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label">Logo</label>
                <input accept="image/png,image/jpeg" type="file" name="Logo" class="form-control" />
                <p style="padding-top:7px;padding-left:20px;display:inline-block; color:red;">建议图片尺寸640*358</p>
            </div>

            <div class="form-group">
                <label class="col-sm-1 control-label">网址</label>

                <input type="text" id="Url" name="Url" class="form-control" required="required">
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label">视频网址</label>
                <input type="text" id="VidoUrl" name="VidoUrl" class="form-control" required="required">
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1">
                    <button id="btnSubmit" type="submit" class="btn btn-primary " style="float: left">增 加</button>
                </div>
            </div>
        </form>
    </div>
</div>
