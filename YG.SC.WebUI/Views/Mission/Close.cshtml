@model YG.SC.DataAccess.M_Mission
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <style>
        .form-horizontal .form-control {
            width: 200px;
            float: left;
            border: 0;
        }

        .form-horizontal .form-input {
            width: 200px;
            float: left;
        }
    </style>
}
<div class="panel panel-default">
    <div class="panel-heading">取消任务</div>
    <div class="panel-body">
        @using (Html.BeginForm("Close", "Mission", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.Partial("ItemPartial", @Model)
            <div class="form-group">
                <label class="col-sm-1 control-label">取消原因</label>
                @Html.TextAreaFor(m => m.CloseReason, new { @class = "form-input", @style = "width:600px", @required = "required" })
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1">
                    @Html.HiddenFor(m => m.Id)
                    <button id="btnSubmit" type="submit" class="btn btn-primary " style="float: left">保存</button>
                </div>
            </div>
        }
    </div>
</div>