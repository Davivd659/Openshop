@using YG.SC.WebUI.Controllers
@model YG.SC.DataAccess.ShopBrandPhoto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <style>
        .form-horizontal .form-control {
            width: 200px;
            float: left;
        }

        .col-sm-1 {
            min-width: 128px;
        }

        #img_logoimage {
            clear: left;
            display: block;
            margin-top: 40px;
            margin-left: 128px;
        }
    </style>
}
@section Scripts {
    <script>
        function initShowError() {
            var warnEle = $("#create-warning");
            if (warnEle.html().length > 0) warnEle.show();
            else warnEle.hide();
        }
        initShowError();
    </script>
}
<div class="panel panel-default">
    <div class="panel-heading">修改友情链接</div>
    <div class="panel-body">
        @using (Html.BeginForm("PhotoEdit", "ShopBrand", new { }, FormMethod.Post, new { @id = "form-create", @class = "form-horizontal", @role = "form", @enctype = "multipart/form-data" }))
        {
            <div class="alert alert-danger" id="create-warning">@TempData["ERROR"]</div>
            @Html.HiddenFor(model => model.Id)
             @Html.HiddenFor(model => model.BrandId)
           <div class="form-group">
                <label class="col-sm-1 control-label" for="LogoImg">图片</label>
                <input accept="image/png,image/jpeg" type="file" name="BrandPhoto" class="form-control" value="@Model.Photo"/>
                <img alt="@Model.Photo" id="img_logoimage" width="320" height="160" class="img-thumbnail" src="@string.Concat(CommonContorllers.FileUploadProjectPhotoSmallPath, Model.Photo)">
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label" for="Recsts">是否有效</label>
                <select  id="Recsts" name="Recsts" class="form-control">
                    <option value="1" @(Model.Recsts==1?"selected=\"selected\"":"")>有效</option>
                    <option value="0" @(Model.Recsts==0?"selected=\"selected\"":"")>无效</option>
                </select>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-1">
                    <button id="btnSubmit" type="submit" class="btn btn-primary " style="float: left">修 改</button>
                </div>
            </div>
        }
    </div>
</div>
