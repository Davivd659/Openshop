@using YG.SC.Model
@using YG.SC.DataAccess
@{
    ViewBag.Title = "增加二级商品分类";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var model = Model as IList<SctSkuCategoryFirst>;
}
@section styles{
    <style>
        .form-horizontal .form-control {
            width: 200px;
            float: left;
        }


        .col-sm-1 {
            min-width: 120px;
        }

        #create-warning {
            display: none;
        }
    </style>
}
@section Scripts {
    <script>
        function initShowError() {
            var warnEle = $("#create-warning");
            if (warnEle.html().length > 0) warnEle.show();
            else warnEle.hide();
        }
        initShowError();
    </script>
}
<div class="panel panel-default">
    <div class="panel-heading">添加二级商品分类</div>
    <div class="panel-body">
        <form class="form-horizontal" role="form" action="/SkuCategorySecond/Add" method="POST" enctype="multipart/form-data">

            <div class="alert alert-danger" id="create-warning">@TempData["ERROR"]</div>

            <div class="form-group">
                <label class="col-sm-1 control-label">二级分类名称</label>
                <input type="text" id="CategoryName" name="CategoryName" class="form-control" required="required">
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label">所属一级分类</label>
                <select  name="SkuCategoryFirstId" class="form-control" required="required">
                    @foreach (SctSkuCategoryFirst item in model)
                    {
                        <option value="@item.Id">@item.CategoryName</option>
                    }

                </select>
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label">二级分类排序</label>
                <input type="text" id="OrdSeq" name="OrdSeq" class="form-control" required="required" value="1000">
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1">
                    <button id="btnSubmit" type="submit" class="btn btn-primary " style="float: left">增 加</button>
                </div>
            </div>
        </form>
    </div>
</div>


