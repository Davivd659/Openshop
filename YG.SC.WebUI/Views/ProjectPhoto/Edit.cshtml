@using YG.SC.WebUI.Controllers
@using YG.SC.DataAccess
@model YG.SC.DataAccess.ProjectPhoto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section styles{
    <style>
        .form-horizontal .form-control {
            width: 200px;
            float: left;
        }

        .col-sm-1 {
            min-width: 128px;
        }

        #img_logoimage {
            clear: left;
            display: block;
            margin-top: 40px;
            margin-left: 128px;
        }
    </style>
}
@section Scripts {
    <script src="~/Scripts/select2.min.js"></script>
    <script>
        function initShowError() {
            var warnEle = $("#create-warning");
            if (warnEle.html().length > 0) warnEle.show();
            else warnEle.hide();
        }
        initShowError();
        @*$("#selSkuGoods").select2({ maximumSelectionSize: 1 });
        $("#selSkuGoods").select2('val',@Model.GoodsId);*@
    </script>
}
<div class="panel panel-default">
    <div class="panel-heading">修改轮播图</div>
    <div class="panel-body">
        @using (Html.BeginForm("Edit", "ProjectPhoto", new { }, FormMethod.Post, new { @id = "form-create", @class = "form-horizontal", @role = "form", @enctype = "multipart/form-data" }))
        {
            <div class="alert alert-danger" id="create-warning">@TempData["ERROR"]</div>
            @Html.HiddenFor(model => model.Id)
        
            <div class="form-group">
                <label class="col-sm-1 control-label" for="CategoryImg">项目图：</label>
                <input accept="image/png,image/jpeg" type="file" name="PictureImg" class="form-control" value="@Model.PhotoUrl"/>
                <img alt="@Model.PhotoUrl" id="img_logoimage" width="320" height="160" class="img-thumbnail" src="@Model.PhotoUrl">
            </div>
                        <div class="form-group">
                <label class="col-sm-1 control-label">图片类型</label>
                            <select id="Type" name="Type">
                                <option value="0">沙盘全景</option>
                                <option value="1">户型图</option>
                                <option value="2">交通图</option>
                                <option value="3">外景图</option>
                                <option value="4">实景图</option>
                                <option value="5">效果图</option>
                                <option value="6">配套图</option>
                            </select>
            </div>
@*
            <div class="form-group">
                <label class="col-sm-1 control-label">图片链接：</label>
                <input type="text" id="Url" name="Url" class="form-control" required="required" value="@Model.Url">
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label">图片链接：</label>
                <input type="text" id="Url" name="Url" class="form-control" required="required" value="@Model.Url">
            </div>*@
            <div class="form-group">
                <label class="col-sm-1 control-label">图片排序</label>
                <input type="text" id="Sort" name="Sort" class="form-control" required="required" value="@Model.Sort">
            </div>

            <div class="form-group">
                <label class="col-sm-1 control-label" for="Recsts">是否有效：</label>
                <select id="Recsts" name="Recsts" class="form-control">
                    <option value="1" @(Model.Recsts ==1 ? "selected=\"selected\"" : "")>有效</option>
                    <option value="0" @(Model.Recsts == 0 ? "selected=\"selected\"" : "")>无效</option>
                </select>
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label">图片名称</label>
                <input type="text" id="PhotoName" name="PhotoName" class="form-control" value="@Model.PhotoName">
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1">
                    <button id="btnSubmit" type="submit" class="btn btn-primary " style="float: left">修 改</button>
                </div>
            </div>
        }
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#Type").val("@Model.Type");

    })
</script>