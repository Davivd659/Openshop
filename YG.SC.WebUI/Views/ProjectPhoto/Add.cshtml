@using YG.SC.DataAccess

@{
    ViewBag.Title = "增加一级商品分类";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <style>
        .form-horizontal .form-control {
            width: 200px;
            float: left;
        }

        .col-sm-1 {
            min-width: 120px;
        }

        #create-warning {
            display: none;
        }
    </style>
}
@section Scripts {
    <script src="~/Scripts/select2.min.js"></script>
    <script>
        function initShowError() {
            var warnEle = $("#create-warning");
            if (warnEle.html().length > 0) warnEle.show();
            else warnEle.hide();
        }
        initShowError();
        $("#selSkuGoods").select2({ maximumSelectionSize: 1 });
    </script>
}
<div class="panel panel-default">
    <div class="panel-heading">添加项目图</div>
    <div class="panel-body">
        <form class="form-horizontal" role="form" action="/ProjectPhoto/Add" id="addform" method="POST" enctype="multipart/form-data">
            <div class="alert alert-danger" id="create-warning">@TempData["ERROR"]</div>
            <div class="form-group">
                <label class="col-sm-1 control-label">项目图</label>
                <input accept="png|jpeg|jpg" type="file" name="PictureImg" class="form-control" required="required" />
                <p style="padding-top:7px;padding-left:20px;display:inline-block; color:red;">建议图片尺寸640*358</p>
            </div>
  
            <div class="form-group">
                <label class="col-sm-1 control-label">图片名称</label>
                <input type="text" id="PhotoName" name="PhotoName" class="form-control" value="">
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label">图片类型</label>
                <select id="Type" name="Type">
                    <option value="0">沙盘全景</option>
                    <option value="1">户型图</option>
                    <option value="2">交通图</option>
                    <option value="3">外景图</option>
                    <option value="4">实景图</option>
                    <option value="5">效果图</option>
                    <option value="6">配套图</option>
                </select>
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label">图片排序</label>
                <input type="text" id="Sort" name="Sort" class="form-control" required="required" value="1000">
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1">
                    <button id="btnSubmit" type="submit" class="btn btn-primary " style="float: left">增 加</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    $(function() {
        $("#addform").validate({
            rules: {
                PictureImg: {
                    required: true,
                    accpt:"png,jpg,jpeg"
                } 
            }
        });
    })
</script>



