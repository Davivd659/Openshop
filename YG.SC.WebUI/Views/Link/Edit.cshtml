@using YG.SC.WebUI.Controllers
@model YG.SC.DataAccess.Link

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <style>
        .form-horizontal .form-control {
            width: 200px;
            float: left;
        }

        .col-sm-1 {
            min-width: 128px;
        }

        #img_logoimage {
            clear: left;
            display: block;
            margin-top: 40px;
            margin-left: 128px;
        }
    </style>
}
@section Scripts {
    <script>
        function initShowError() {
            var warnEle = $("#create-warning");
            if (warnEle.html().length > 0) warnEle.show();
            else warnEle.hide();
        }
        initShowError();
    </script>
}
<div class="panel panel-default">
    <div class="panel-heading">修改合作单位</div>
    <div class="panel-body">
        @using (Html.BeginForm("Edit", "Link", new { }, FormMethod.Post, new { @id = "form-create", @class = "form-horizontal", @role = "form", @enctype = "multipart/form-data" }))
        {
            <div class="alert alert-danger" id="create-warning">@TempData["ERROR"]</div>
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                <label class="col-sm-1 control-label" for="CategoryName">名称</label>
                <input type="text" id="NAME" name="NAME" class="form-control" required="required" value="@Model.NAME">
            </div>
            
            <div class="form-group">
                <label class="col-sm-1 control-label" for="CategoryImg">URL地址</label>

                <input type="text" id="URL" name="URL" class="form-control" required="required" value="@Model.URL">
               </div>
            
            <div class="form-group">
                <label class="col-sm-1 control-label" for="OrdSeq">类型</label>
                <select class="form-control" id="LinkType" name="LinkType" required="required">
                    <option value="1">政府合作</option>
                    <option value="2">媒体合作</option>
                    <option value="3">开发商合作</option>
                    <option value="4">代理商合作</option>
                    <option value="5">网站合作</option>
                </select>
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label" for="Recsts">是否有效</label>
                <select  id="Recsts" name="Recsts" class="form-control">
                    <option value="1" @(Model.Recsts==1?"selected=\"selected\"":"")>有效</option>
                    <option value="-1" @(Model.Recsts==0?"selected=\"selected\"":"")>无效</option>
                </select>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-1">
                    <button id="btnSubmit" type="submit" class="btn btn-primary " style="float: left">修 改</button>
                </div>
            </div>
        }
    </div>
</div>
